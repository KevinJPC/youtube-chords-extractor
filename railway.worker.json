{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "watchPatterns": ["packages/worker", "packages/common", "packages/audio-analysis-py"],
    "nixpacksPlan": {
      "phases": {
        "python:setup": {
          "nixPkgs": ["pipenv"]
        },
        "install": {
          "cmds": [
            "npm ci --workspace=packages/worker --workspace=packages/common --omit=dev",
            "cd packages/audio-analysis-py && PIPENV_VENV_IN_PROJECT=1 pipenv install --deploy"
          ] 
        }
      }
    }
  },
  "deploy": {
    "startCommand": "npm run start:worker"
  }
}