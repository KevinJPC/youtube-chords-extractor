{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "nixpacksVersion": "1.21.2",
    "builder": "NIXPACKS",
    "watchPatterns": ["packages/worker", "packages/common", "packages/audio-analysis-py"],
    "nixpacksPlan": {
      "providers": ["...", "python"],
      "phases": {
        "python:setup": {
          "nixPkgs": ["...", "pipenv"]
        },
        "install": {
          "cmds": [
            "npm ci --workspace=packages/worker --workspace=packages/common --omit=dev"
          ] 
        },
        "python:install": {
          "cmds": ["cd packages/audio-analysis-py && python -m pip install numpy==1.23.1 && PIPENV_VENV_IN_PROJECT=1 pipenv install"] 
        }
      }
    }
  },
  "deploy": {
    "startCommand": "npm run start:worker"
  }
}